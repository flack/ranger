{
    "name": "openpsa/ranger",
    "description": "Formatter for date and time ranges with i18n support",
    "keywords": ["date range", "time range"],
    "license": "MIT",
    "authors": [
        {
            "name": "Andreas Flack",
            "email": "flack@contentcontrol-berlin.de",
            "homepage": "http://www.contentcontrol-berlin.de/"
        }
    ],
    "require": {
        "php": ">=7.0"
    },
    "suggest": {
        "symfony/intl": "Optional PHP alternative to ext-intl",
        "ext-intl": "Needed for usage with other locales than 'en'"
    },
    "autoload": {
        "psr-4": { "OpenPsa\\Ranger\\": "src/" }
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.5"
    }
}
